<view class="container" style="min-height: 100vh; display: flex; flex-direction: column; justify-content: center;">
  <view class="text-center mb-10">
    <view class="w-16 h-16 bg-warm-primary rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg" style="width: 160rpx; height: 160rpx;">
      <text class="text-white" style="font-size: 60rpx;">❤️</text>
    </view>
    <text class="text-3xl font-bold text-gray-800 block">欢迎回家</text>
    <text class="text-gray-500 mt-2 text-lg block">社区康养服务中心</text>
  </view>

  <view style="width: 100%;">
    <view class="mb-4">
      <text class="block text-lg font-medium text-gray-700 mb-2">手机号码</text>
      <input class="block w-full p-4 text-xl border rounded-xl bg-white" placeholder="请输入您的手机号" value="{{phone}}" bindinput="onPhoneInput" type="number" style="height: 100rpx;"/>
    </view>

    <view class="mb-6">
      <text class="block text-lg font-medium text-gray-700 mb-2">验证码</text>
      <view class="flex items-center">
        <input class="flex-1 block p-4 text-xl border rounded-xl bg-white mr-4" placeholder="请输入验证码" value="{{code}}" bindinput="onCodeInput" type="number" style="height: 100rpx;"/>
        <button class="bg-white border text-gray-700 rounded-xl text-lg font-medium flex items-center justify-center" style="width: 240rpx; height: 100rpx; margin: 0;">获取验证码</button>
      </view>
    </view>

    <view class="pt-4">
      <button class="w-full btn-primary text-xl font-bold rounded-xl flex items-center justify-center" style="height: 110rpx;" bindtap="handleLogin">登录</button>
    </view>
  </view>

  <view class="mt-8 text-center">
    <text class="text-gray-500 text-lg">遇到困难？联系客服</text>
  </view>
</view>